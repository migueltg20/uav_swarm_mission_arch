<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="3">
  <BehaviorTree ID="Parellel mission 02">
    <Sequence>
      <!-- <Arming request="true"/> -->
      <!-- <Offboarding request="true"/> -->
      <TakingOff drone_id="0"
                 takeoff_height="5"/>
      <TakingOff drone_id="2"
                 takeoff_height="5"/>
      <Parallel failure_threshold="1"
                success_threshold="2">
        <FollowingTraj drone_id="0"
                       trajectory="{simple_traj_cir}"
                       radius="2"/>
        <Sequence>
          <FollowingTraj drone_id="2"
                         trajectory="{complex_traj}"
                         radius="0"/>
          <Landing drone_id="2"
                   land="true"/>
        </Sequence>
      </Parallel>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <!-- <Action ID="Arming"
            editable="true">
      <input_port name="request"/>
    </Action> -->
    <Action ID="FollowingTraj"
            editable="true">
      <input_port name="drone_id"/>
      <input_port name="trajectory"/>
      <input_port name="radius"/>
    </Action>
    <Action ID="Landing"
            editable="true">
      <input_port name="drone_id"/>
      <input_port name="land"/>
    </Action>
    <!-- <Action ID="Offboarding"
            editable="true">
      <input_port name="request"/>
    </Action> -->
    <Action ID="TakingOff"
            editable="true">
      <input_port name="drone_id"/>
      <input_port name="takeoff_height"/>
    </Action>
  </TreeNodesModel>

</root>
